<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.izzulmak.inspense.AccountmanipulateActivity">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_Accountmanipulate_Id"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Account name: "
            />
        <EditText
            android:id="@+id/et_Accountmanipulate_Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/bt_Accountmanipulate_Positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save"
                android:onClick="actSave"
                />
            <Button
                android:id="@+id/bt_Accountmanipulate_Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:onClick="actDelete"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
